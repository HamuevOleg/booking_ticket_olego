	<script is:inline>
        const tabs = document.querySelectorAll(".blur_container div");

        tabs.forEach(tab => {
            tab.addEventListener("click", () => {
                tabs.forEach(t => {
                    t.classList.remove("tab_active");
                    t.classList.add("tab_default");
                });

                tab.classList.remove("tab_default");
                tab.classList.add("tab_active");
            });
        });


        // Set minimum date (today)
        const today = new Date().toISOString().split('T')[0];
        document.querySelector('input[name="departureDate"]').min = today;
        document.querySelector('input[name="returnDate"]').min = today;

        // Update minimum return date when departure date changes
        document.querySelector('input[name="departureDate"]').addEventListener('change', function() {
            const returnDateInput = document.querySelector('input[name="returnDate"]');
            returnDateInput.min = this.value;
            if (returnDateInput.value && returnDateInput.value < this.value) {
                returnDateInput.value = '';
            }
        });

        // Check the number of infants (not more than adults)
        document.querySelector('input[name="infants"]').addEventListener('change', function() {
            const adults = parseInt(document.querySelector('input[name="adults"]').value);
            if (parseInt(this.value) > adults) {
                this.value = adults;
                alert('The number of infants cannot exceed the number of adults');
            }
        });

        // Handle form submission
        document.getElementById('flightSearchForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const searchParams = {
                from: formData.get('from'),
                to: formData.get('to'),
                departureDate: formData.get('departureDate'),
                returnDate: formData.get('returnDate') || null,
                adults: parseInt(formData.get('adults')),
                children: parseInt(formData.get('children')),
                infants: parseInt(formData.get('infants')),
                travelClass: formData.get('travelClass')
            };

            // Show the modal
            const modal = document.getElementById('searchResultsModal');
            const resultsContainer = document.getElementById('searchResults');
            
            modal.classList.add('show');
            
            // Show loading indicator
            resultsContainer.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Searching for the best deals...</p>
                </div>
            `;

            try {
                // API call will be here
                const results = await searchFlights(searchParams);
                displayResults(results, searchParams);
            } catch (error) {
                resultsContainer.innerHTML = `
                    <div class="no-results">
                        <h3>An error occurred</h3>
                        <p>Could not find flights. Please try changing your search parameters.</p>
                    </div>
                `;
            }
        });

        // Close the modal
        document.getElementById('closeModal').addEventListener('click', function() {
            document.getElementById('searchResultsModal').classList.remove('show');
        });

        // Закрытие по клику на фон
        document.getElementById('searchResultsModal').addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.remove('show');
            }
        });

        // Функция поиска (мокап для демонстрации)
        async function searchFlights(params) {
            // Имитация задержки API
            await new Promise(resolve => setTimeout(resolve, 2000));
            
            // Мокап данных
            return [
                {
                    id: '1',
                    departure: { iataCode: params.from, at: '2024-09-25T10:30:00' },
                    arrival: { iataCode: params.to, at: '2024-09-25T14:45:00' },
                    carrier: 'Turkish Airlines',
                    price: { total: '450', currency: 'USD' },
                    duration: '4h 15m'
                },
                {
                    id: '2',
                    departure: { iataCode: params.from, at: '2024-09-25T16:20:00' },
                    arrival: { iataCode: params.to, at: '2024-09-25T20:55:00' },
                    carrier: 'Lufthansa',
                    price: { total: '520', currency: 'USD' },
                    duration: '4h 35m'
                }
            ];
        }

        // Отображение результатов
        function displayResults(flights, searchParams) {
            const resultsContainer = document.getElementById('searchResults');
            
            if (!flights || flights.length === 0) {
                resultsContainer.innerHTML = `
                    <div class="no-results">
                        <h3>Рейсы не найдены</h3>
                        <p>Попробуйте изменить параметры поиска</p>
                    </div>
                `;
                return;
            }

            const resultsHTML = flights.map(flight => `
                <div class="flight-offer">
                    <div class="flight-route">
                        <div class="flight-location">
                            <div class="flight-code">${flight.departure.iataCode}</div>
                            <div class="flight-time">${formatTime(flight.departure.at)}</div>
                        </div>
                        <div class="flight-arrow">-></div>
                        <div class="flight-location">
                            <div class="flight-code">${flight.arrival.iataCode}</div>
                            <div class="flight-time">${formatTime(flight.arrival.at)}</div>
                        </div>
                    </div>
                    <div class="flight-details">
                        <div class="flight-info">
                            <span> ${flight.carrier}</span>
                            <span> ${flight.duration}</span>
                            <span> ${searchParams.adults + searchParams.children + searchParams.infants} passengers.</span>
                        </div>
                        <div class="flight-price">${flight.price.total} ${flight.price.currency}</div>
                    </div>
                </div>
            `).join('');

            resultsContainer.innerHTML = `
                <div class="flight-results">
                    ${resultsHTML}
                </div>
            `;
        }

        // Форматирование времени
        function formatTime(isoString) {
            const date = new Date(isoString);
            return date.toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' });
        }

    </script>
