            <form class="main_form" id="flightSearchForm">
        <div class="form-row">
            <div class="input-group">
                <label class="input-label">from</label>
                <input type="text" class="input_field" name="from" placeholder="City from" required>
            </div>
            <div class="input-group">
                <label class="input-label">to</label>
                <input type="text" class="input_field" name="to" placeholder="City to" required>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group date-group">
                <div class="input-group">
                    <label class="input-label">Departure Date</label>
                    <input type="date" class="input_field" name="departureDate" required>
                </div>
                <div class="input-group">
                    <label class="input-label">Return Date</label>
                    <input type="date" class="input_field" name="returnDate">
                </div>
            </div>
            <div class="input-group">
                <label class="input-label">Class</label>
                <select class="input_field" name="travelClass">
                    <option value="ECONOMY">Economy</option>
                    <option value="PREMIUM_ECONOMY">Premium Economy</option>
                    <option value="BUSINESS">Business</option>
                    <option value="FIRST">First Class</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="passenger-group">
                <div class="input-group passenger-input">
                    <label class="input-label">Adult (12+)</label>
                    <input type="number" class="input_field" name="adults" min="1" max="9" value="1">
                </div>
                <div class="input-group passenger-input">
                    <label class="input-label">Children (2-11)</label>
                    <input type="number" class="input_field" name="children" min="0" max="9" value="0">
                </div>
                <div class="input-group passenger-input">
                    <label class="input-label">Infants (0-2)</label>
                    <input type="number" class="input_field" name="infants" min="0" max="9" value="0">
                </div>
            </div>
            <button type="submit" class="search_flights">
                <span id="searchButtonText">Search Flights</span>
            </button>
        </div>
    </form>

